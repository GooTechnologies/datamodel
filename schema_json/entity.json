{
  "AnimationComponent": {
    "additionalProperties": false,
    "id": "AnimationComponent",
    "properties": {
      "layersRef": {
        "$ref": "LayersRef"
      },
      "poseRef": {
        "$ref": "PoseRef"
      }
    },
    "required": [
      "layersRef",
      "poseRef"
    ]
  },
  "CameraComponent": {
    "additionalProperties": false,
    "id": "CameraComponent",
    "properties": {
      "aspect": {
        "description": "TODO: Mandatory?",
        "type": "number"
      },
      "far": {
        "type": "number"
      },
      "fov": {
        "type": "number"
      },
      "near": {
        "type": "number"
      }
    },
    "required": [
      "far",
      "fov",
      "near"
    ]
  },
  "LightComponent": {
    "additionalProperties": false,
    "id": "LightComponent",
    "properties": {
      "type": {
        "enum": [
          "PointLight",
          "DirectionalLight",
          "SpotLight"
        ]
      },
      "angle": {
        "type": "number"
      },
      "color": {
        "$ref": "Color"
      },
      "attenuate": {
        "description": "To be removed",
        "type": "boolean"
      },
      "direction": {
        "$ref": "Vector3"
      },
      "exponent": {
        "type": "number"
      },
      "intensity": {
        "type": "number"
      },
      "lightCookie": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "textureRef": {
            "$ref": "TextureRef"
          }
        },
        "required": [
          "enabled",
          "textureRef"
        ]
      },
      "penumbra": {
        "type": "number"
      },
      "range": {
        "type": "number"
      },
      "shadowCaster": {
        "type": "boolean"
      },
      "shadowSettings": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "darkness": {
            "type": "number"
          },
          "upVector": {
            "$ref": "Vector3"
          },
          "far": {
            "type": "number"
          },
          "near": {
            "type": "number"
          },
          "size": {
            "type": "number"
          },
          "resolution": {
            "$ref": "Vector2"
          },
          "shadowType": {
            "enum": [
              "Basic",
              "PCF",
              "VSM"
            ]
          },
          "fov": {
            "description": "Remove",
            "type": "number"
          },
          "type": {
            "description": "Remove",
            "type": "string"
          },
          "projection": {
            "description": "Remove",
            "type": "string"
          }
        },
        "required": [
          "darkness",
          "upVector",
          "far",
          "near",
          "size",
          "resolution",
          "shadowType",
          "fov",
          "type",
          "projection"
        ]
      },
      "specularIntensity": {
        "type": "number"
      }
    },
    "required": [
      "type",
      "attenuate",
      "intensity",
      "shadowCaster",
      "specularIntensity"
    ]
  },
  "MeshDataComponent": {
    "additionalProperties": false,
    "id": "MeshDataComponent",
    "properties": {
      "meshRef": {
        "$ref": "MeshRef"
      },
      "poseRef": {
        "$ref": "PoseRef"
      },
      "shape": {
        "enum": [
          "Box",
          "Quad",
          "Sphere",
          "Cylinder",
          "Torus",
          "Disk",
          "Cone"
        ]
      },
      "shapeOptions": {
        "type": "object",
        "additionalProperties": {}
      }
    }
  },
  "MeshRendererComponent": {
    "additionalProperties": false,
    "id": "MeshRendererComponent",
    "properties": {
      "hidden": {
        "type": "boolean"
      },
      "materialRefs": {
        "type": "array",
        "items": {
          "$ref": "MaterialRef"
        }
      },
      "cullMode": {
        "enum": [
          "Dynamic",
          "Never"
        ]
      },
      "castShadows": {
        "type": "boolean"
      },
      "receiveShadows": {
        "type": "boolean"
      },
      "reflectable": {
        "type": "boolean"
      }
    },
    "required": [
      "materialRefs",
      "cullMode",
      "castShadows",
      "receiveShadows"
    ]
  },
  "ScriptComponent": {
    "additionalProperties": false,
    "id": "ScriptComponent",
    "properties": {
      "scriptRefs": {
        "type": "array",
        "items": {
          "$ref": "ScriptRef"
        }
      }
    },
    "required": [
      "scriptRefs"
    ]
  },
  "StateMachineComponent": {
    "additionalProperties": false,
    "id": "StateMachineComponent",
    "properties": {
      "machineRefs": {
        "type": "array",
        "items": {
          "$ref": "MachineRef"
        }
      }
    },
    "required": [
      "machineRefs"
    ]
  },
  "SoundComponent": {
    "additionalProperties": false,
    "id": "SoundComponent",
    "properties": {
      "soundRefs": {
        "type": "array",
        "items": {
          "$ref": "SoundRef"
        }
      }
    },
    "required": [
      "soundRefs"
    ]
  },
  "TransformComponent": {
    "additionalProperties": false,
    "id": "TransformComponent",
    "properties": {
      "parentRef": {
        "$ref": "EntityRef"
      },
      "rotation": {
        "description": "Should be vector3",
        "type": "array",
        "items": {
          "type": "number"
        }
      },
      "scale": {
        "$ref": "Vector3"
      },
      "translation": {
        "$ref": "Vector3"
      }
    },
    "required": [
      "rotation",
      "translation"
    ]
  },
  "entity": {
    "additionalProperties": false,
    "id": "entity",
    "properties": {
      "ref": {
        "$ref": "EntityRef"
      },
      "name": {
        "type": "string"
      },
      "hidden": {
        "type": "boolean"
      },
      "nodeType": {
        "type": "string"
      },
      "components": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "animation": {
            "$ref": "AnimationComponent"
          },
          "camera": {
            "$ref": "CameraComponent"
          },
          "light": {
            "$ref": "LightComponent"
          },
          "meshData": {
            "$ref": "MeshDataComponent"
          },
          "meshRenderer": {
            "$ref": "MeshRendererComponent"
          },
          "script": {
            "$ref": "ScriptComponent"
          },
          "stateMachine": {
            "$ref": "StateMachineComponent"
          },
          "sound": {
            "$ref": "SoundComponent"
          },
          "transform": {
            "$ref": "TransformComponent"
          }
        }
      }
    },
    "required": [
      "name",
      "components"
    ]
  },
  "DateTime": {
    "additionalProperties": false,
    "id": "DateTime",
    "description": "Matches an ISO8601 datetime, e.g. 2014-01-11T13:29:12.42423",
    "type": "string",
    "format": "date-time",
    "properties": {}
  },
  "Color": {
    "additionalProperties": false,
    "id": "Color",
    "description": "Matches an array of 3-4 numeric elements between [0,1]",
    "type": "array",
    "items": {
      "type": "number",
      "maximum": 1,
      "minimum": 0
    },
    "minItems": 3,
    "maxItems": 4,
    "properties": {}
  },
  "Vector3": {
    "additionalProperties": false,
    "id": "Vector3",
    "description": "Matches an array of 3 values",
    "type": "array",
    "items": {
      "type": "number"
    },
    "minItems": 3,
    "maxItems": 3,
    "properties": {}
  },
  "Vector2": {
    "additionalProperties": false,
    "id": "Vector2",
    "description": "Matches an array of 2 values",
    "type": "array",
    "items": {
      "type": "number"
    },
    "minItems": 2,
    "maxItems": 2,
    "properties": {}
  },
  "URI": {
    "additionalProperties": false,
    "id": "URI",
    "description": "Matches rfc3987 URI",
    "type": "string",
    "format": "uri",
    "properties": {}
  },
  "EntityRef": {
    "additionalProperties": false,
    "id": "EntityRef",
    "description": "Matches id ending with .entity",
    "type": "string",
    "pattern": "\\.entity$",
    "properties": {}
  },
  "GroupRef": {
    "additionalProperties": false,
