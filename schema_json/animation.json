{
  "AnimationTransition": {
    "additionalProperties": false,
    "id": "AnimationTransition",
    "properties": {
      "type": {
        "enum": [
          "Fade",
          "SyncFade",
          "Frozen"
        ]
      },
      "fadeTime": {
        "description": "Should be number",
        "type": "string"
      }
    },
    "required": [
      "type",
      "fadeTime"
    ]
  },
  "AnimationState": {
    "additionalProperties": false,
    "id": "AnimationState",
    "properties": {
      "stateRef": {
        "$ref": "AnimationStateRef"
      },
      "transitions": {
        "type": "object",
        "additionalProperties": {
          "$ref": "AnimationTransition"
        }
      }
    },
    "required": [
      "stateRef"
    ]
  },
  "AnimationLayer": {
    "additionalProperties": false,
    "id": "AnimationLayer",
    "properties": {
      "name": {
        "type": "string"
      },
      "blendWeight": {
        "type": "number"
      },
      "defaultState": {
        "type": "string"
      },
      "states": {
        "type": "object",
        "additionalProperties": {
          "$ref": "AnimationState"
        }
      },
      "transitions": {
        "type": "object",
        "additionalProperties": {
          "$ref": "AnimationTransition"
        }
      }
    },
    "required": [
      "name",
      "blendWeight",
      "defaultState",
      "states",
      "transitions"
    ]
  },
  "animation": {
    "additionalProperties": false,
    "id": "animation",
    "properties": {
      "ref": {
        "type": "string"
      },
      "layers": {
        "type": "array",
        "items": {
          "$ref": "AnimationLayer"
        }
      }
    },
    "required": [
      "layers"
    ]
  },
  "DateTime": {
    "additionalProperties": false,
    "id": "DateTime",
    "description": "Matches an ISO8601 datetime, e.g. 2014-01-11T13:29:12.42423",
    "type": "string",
    "format": "date-time",
    "properties": {}
  },
  "Color": {
    "additionalProperties": false,
    "id": "Color",
    "description": "Matches an array of 3-4 numeric elements between [0,1]",
    "type": "array",
    "items": {
      "type": "number",
      "maximum": 1,
      "minimum": 0
    },
    "minItems": 3,
    "maxItems": 4,
    "properties": {}
  },
